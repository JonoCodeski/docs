{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "MyLang Reader",
  "description": "Transform any content into an immersive language learning experience",
  "colors": {
    "primary": "#0ea5e9",
    "light": "#06b6d4",
    "dark": "#0891b2",
    "anchors": {
      "from": "#0ea5e9",
      "to": "#06b6d4"
    }
  },
  "favicon": "/favicon.svg",
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navigation": {
    "global": {
      "anchors": [
        {
          "anchor": "MyLang Reader",
          "icon": "book-open-cover",
          "href": "https://www.mylangreader.com"
        },
        {
          "anchor": "Contact Support",
          "icon": "envelope",
          "href": "mailto:contact@mylangreader.com"
        }
      ]
    },
    "groups": [
      {
        "group": "Get Started",
        "pages": [
          "index",
          "quickstart",
          "import-guide"
        ]
      },
      {
        "group": "Core Features",
        "pages": [
          "guide/readerclient",
          "guide/vocabulary",
          "guide/practice",
          "guide/library"
        ]
      },
      {
        "group": "Advanced Features",
        "pages": [
          "features/vocabulary-packs",
          "features/news",
          "features/account"
        ]
      },
      {
        "group": "How-To Guides",
        "pages": [
          "tutorials/importing-content",
          "tutorials/using-reader-features",
          "tutorials/building-vocabulary",
          "tutorials/practice-sessions"
        ]
      }
    ]
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:contact@mylangreader.com"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Open App",
      "href": "https://www.mylangreader.com"
    }
  },
  "contextual": {
    "options": [
     "copy",
     "view",
     "chatgpt",
     "claude",
     "perplexity",
     "mcp",
     "cursor",
     "vscode"
   ]
  },
  "seo": {
    "indexing": "navigable"
  },
  "search": {
    "prompt": "Search MyLang Reader documentation..."
  },
  "footer": {
    "socials": {
      "website": "https://www.mylangreader.com"
    }
  }
}
